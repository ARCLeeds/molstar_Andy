{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2018",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "lib": [ "ES2018", "DOM" ],
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": [ "src/**/*" ],
    // "exclude": [ "src/servers/**/*", "src/perf-tests/*", "src/cli/**/*" ]
}